{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "black": "#111111",
    "white": "#f7f7f7"
  },
  "console_title_template": "{{if .Root}}[root] {{end}}{{.Shell}} in <{{.Folder}}>",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u250c",
          "foreground": "p:white",
          "background": "transparent",
          "type": "text",
          "style": "plain"
        },
        {
          "options": {
            "linux": "\uf17c",
            "macos": "\uf179",
            "ubuntu": "\uf31b",
            "windows": "\ue62a"
          },
          "template": " {{.Icon}}{{if .WSL}} (WSL){{end}}\u2800",
          "foreground": "p:white",
          "background": "#464646",
          "type": "os",
          "style": "plain"
        },
        {
          "foreground": "p:black",
          "background": "#F07623",
          "type": "text",
          "template": " \uf36f{{ if eq .Env.FISH__BIND_MODE \"default\" }} NORMAL {{ else if eq .Env.FISH__BIND_MODE \"insert\" }} INSERT {{ else if eq .Env.FISH__BIND_MODE \"replace_one\" }} REPLACE {{ else if eq .Env.FISH__BIND_MODE \"visual\"}} VISUAL {{ else }} {{.Env.FISH__BIND_MODE}} {{ end }}",
          "style": "plain",
          "background_templates": [
            "{{if eq \"default\" .Env.FISH__BIND_MODE}}blue{{end}}",
            "{{if eq \"insert\" .Env.FISH__BIND_MODE}}green{{end}}",
            "{{if eq \"visual\" .Env.FISH__BIND_MODE}}magenta{{end}}",
            "{{if eq \"replace\" .Env.FISH__BIND_MODE}}red{{end}}"
          ]
        },
        {
          "template": " \uf489 {{.Name}}\u2800",
          "foreground": "p:black",
          "background": "p:white",
          "type": "shell",
          "style": "plain"
        },
        {
          "template": " \uf2c0 {{.HostName}}\ue0bd{{.UserName}}\u2800",
          "foreground": "p:black",
          "background": "#ffe093",
          "type": "session",
          "style": "plain"
        },
        {
          "options": {
            "branch_icon": " \ue0a0 "
          },
          "template": "{{.HEAD}}\u2800",
          "foreground": "p:black",
          "background": "#ffffd6",
          "type": "git",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "options": {
            "style": "austin",
            "threshold": 0
          },
          "template": "{{.FormattedMs}}",
          "foreground": "#b3ffde",
          "background": "transparent",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "options": {
            "time_format": "02/01/06 15:04"
          },
          "template": "<p:white> Â· </>{{.CurrentDate | date .Format}}",
          "foreground": "#b3ffde",
          "background": "transparent",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "transparent",
          "foreground": "p:white",
          "options": {
            "folder_icon": "\uf07b",
            "folder_separator_template": "<#93d0ff> \u00bb </>",
            "home_icon": "\ueb06",
            "style": "agnoster"
          },
          "style": "plain",
          "template": "<p:white>\u2514</><#93d0ff>[</> {{.Path}} <#93d0ff>]</>",
          "type": "path"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "transparent",
          "foreground": "#81ff91",
          "foreground_templates": ["{{if gt .Code 0}}#ff3030{{end}}"],
          "options": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f",
          "type": "status"
        }
      ]
    }
  ],
  "version": 4,
  "final_space": true
}
